<div class="row">
  <div class="col-lg-8 mx-auto">
    <h2 class="text-center mb-5">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control input rounded-0' %>
      </div>

      <div class="actions d-flex align-items-center">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-purple mr-5 rounded-0 py-3 px-5 shadow font-weight-bold', style: 'font-size: 1.2em' %>
        <div>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
